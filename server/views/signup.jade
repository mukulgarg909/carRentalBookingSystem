extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Sign Up

        form(method='POST' action='')
          div.form-group
            label(for='name') Name:
            input#name.form-control(type='text', placeholder='enter your name' name='name')
          div.form-group
            label(for='email') Email:
            input#email.form-control(type='email', placeholder='enter name@email.com' name='email')
          div.form-group
            label(for='pw') Password:
            input#pw.form-control(type='password', placeholder='enter password' name='password')
          button.btn.btn-primary(type='submit') Sign up
